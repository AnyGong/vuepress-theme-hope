.theme-night
  // 密码
  .passwordCtn .inputCtn input
    background-color #000 !important
    color #fff !important

  // 主页
  .home
    .feature:hover
      box-shadow 1px 1px 6px 0 rgba(223, 222, 219, 0.28)

  // 博客主页
  .page.blog
    .blog-page-wrapper
      .blogger-info-wrapper
        boxshadow()

  // 文章列表
  .article-wrapper
    .article
      boxshadow()

  // 博主信息
  .blogger-info
    .num > div:first-child
      border-right 1px solid #888

  // 标签列表
  .tag-list-wrapper
    .tag
      border 1px solid $night-bordercolor
      box-shadow none

      .tag-name
        color #aaa
