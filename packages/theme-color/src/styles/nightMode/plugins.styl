@require './config'

.theme-night
  // 主题选择
  .color-picker
    .color-picker-menu
      bgcolor()
      bordercolor()

    &::before
      border-color transparent transparent $night-bordercolor

  // 页面信息
  .page
    .page-info
      fontcolor()

    // valine 评论按钮
    .valine-wrapper
      #valine
        *
          color #aaa

        code, pre
          background-color #282c34

        blockquote
          color #999

        .vbtn
          bgcolor()

          &:active, &:hover
            color #fff
            background-color $accentColor

        .vlist .vcard .vhead .vsys
          background #121212
          color #4c4e4e

  // medium-zoom 插件背景
  &.medium-zoom--opened .medium-zoom-overlay
    background-color #000

  // flowchart 适配
  .vuepress-flowchart.loading
    background-color #000

  // 分享组件
  .share-ctn
    fontcolor()
    background-color #000
    box-shadow -2px 1px 6px rgba(255, 255, 255, 0.08)

    .btn
      -webkit-tap-highlight-color rgba(0, 0, 0, 0)

    &:not({$prefix-class}-trigger):hover
      background-color rgba(67, 67, 67, 0.15)

  @media screen and (max-width: $MQMobile)
    .share-ctn
      box-shadow -1px 1px 3px rgba(255, 255, 255, 0.03)

  // pwa
  .sw-update-popup
    background-color $night-bgcolor !important
    color $night-fontcolor !important
    box-shadow none
    border 1px solid
    bordercolor()
