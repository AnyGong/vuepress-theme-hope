{
  "name": "vuepress-theme-hope",
  "description": "a light vuepress theme",
  "private": true,
  "scripts": {
    "bootstrap": "node scripts/bootstrap.js",
    "lerna:bootstrap": "lerna bootstrap",
    "lerna:clean": "lerna clean",
    "packages:list": "lerna ls -l",
    "packages:diff": "lerna diff",
    "packages:changed": "lerna changed",
    "lint": "npm run lint:check --fix",
    "lint:check": "eslint --ext .js --ext .vue packages/",
    "commit": "npx git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 2",
    "release": "node scripts/release.js"
  },
  "devDependencies": {
    "@vssue/api-bitbucket-v2": "^1.1.1",
    "@vssue/api-gitee-v5": "^1.1.1",
    "@vssue/api-github-v3": "^1.1.2",
    "@vssue/api-github-v4": "^1.2.0",
    "@vssue/api-gitlab-v4": "^1.1.1",
    "@vssue/vuepress-plugin-vssue": "^1.2.0",
    "@vue/eslint-config-prettier": "^5.0.0",
    "@vuepress/plugin-pwa": "^1.2.0",
    "conventional-changelog-cli": "^2.0.25",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-vue": "^6.0.0",
    "husky": "^3.0.9",
    "leancloud-storage": "^3.15.0",
    "lerna": "^3.18.3",
    "lint-staged": "^9.4.2",
    "prettier": "1.18.2",
    "screenfull": "^5.0.0",
    "valine": "^1.3.10",
    "vssue": "^1.2.0",
    "vuepress": "^1.2.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
