{
  "name": "vuepress-theme-hope",
  "description": "a light vuepress theme",
  "private": true,
  "workspaces": [
    "docs/",
    "packages/*",
    "tests/"
  ],
  "scripts": {
    "bootstrap": "node scripts/bootstrap.js",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 2",
    "commit": "npx git-cz",
    "release": "node scripts/release.js",
    "lerna:bootstrap": "lerna bootstrap",
    "lerna:clean": "lerna clean",
    "packages:list": "lerna ls -l",
    "packages:diff": "lerna diff",
    "packages:changed": "lerna changed",
    "packages:update": "lerna exec -- ncu -u",
    "packages:check-update": "lerna exec -- ncu",
    "lint": "npm run lint:check --fix",
    "lint:check": "eslint --ext .js --ext .vue packages/",
    "comment-docs:serve": "yarn workspace docs comment:serve",
    "comment-docs:clean-serve": "yarn workspace docs comment:clean-serve",
    "comment-docs:build": "yarn workspace docs comment:build",
    "comment-test:serve": "yarn workspace @mr-hope/vuepress-plugin-comment test:serve",
    "comment-test:clean-serve": "yarn workspace @mr-hope/vuepress-plugin-comment test:clean-serve",
    "comment-test:build": "yarn workspace @mr-hope/vuepress-plugin-comment test:build",
    "md-enhance-docs:serve": "yarn workspace docs md-enhance:serve",
    "md-enhance-docs:clean-serve": "yarn workspace docs md-enhance:clean-serve",
    "md-enhance-docs:build": "yarn workspace docs md-enhance:build",
    "md-enhance-test:serve": "yarn workspace vuepress-plugin-md-enhance test:serve",
    "md-enhance-test:clean-serve": "yarn workspace vuepress-plugin-md-enhance test:clean-serve",
    "md-enhance-test:build": "yarn workspace vuepress-plugin-md-enhance test:build",
    "theme:serve": "yarn workspace docs theme:serve",
    "theme:clean-serve": "yarn workspace docs theme:clean-serve",
    "theme:build": "yarn workspace docs theme:build",
    "theme-test:serve": "yarn workspace test serve",
    "theme-test:clean-serve": "yarn workspace test clean-serve",
    "theme-test:build": "yarn workspace test build",
    "build:all": "lerna run build --parallel"
  },
  "devDependencies": {
    "@vue/eslint-config-prettier": "^6.0.0",
    "conventional-changelog-cli": "^2.0.28",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-vue": "^6.0.1",
    "husky": "^3.1.0",
    "lerna": "^3.19.0",
    "lint-staged": "^9.5.0",
    "prettier": "1.19.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
